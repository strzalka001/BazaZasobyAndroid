<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
   android:background="@color/tlo_color"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:weightSum="1">



    <TextView
        android:text="@string/powitanie"
        style="@style/powitanie"
        android:id="@+id/textView"
        android:layout_height="wrap_content" />

    <TextView
        android:text="@string/lista_produktow"
        style="@style/lista_produktow"
        android:id="@+id/textView2" />


    <ListView
        android:id="@+id/list_products"
        android:layout_gravity="bottom"
        android:layout_width="fill_parent"
        android:layout_height="170dp"

        android:layout_weight="0.09">

    </ListView>

    <TextView
        android:text="@string/opis_produktu"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView3" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:layout_weight="0.18" />

    <Button
        android:text="dodaj"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonAdd" />

    <Button
        android:text="Usuń"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:enabled="false"
        android:id="@+id/buttonDelete" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <Button
            android:text="Edytuj"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonEdit" />

        <Button
            android:text="Następny"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonNext"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="23dp"
            android:layout_marginEnd="23dp" />


    </RelativeLayout>


</LinearLayout>
